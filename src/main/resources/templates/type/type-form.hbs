{{#partial "content"}}

{{#if editType}}
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Edit Type</h3>
    </div>
    <div class="panel-body">
        <form action="/type/{{editType.id}}/update" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Name</label>
                        <input id="nameUpdate" name="nameUpdate" class="form-control input-sm" type="text" value="{{editType.name}}">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Description</label>
                        <input id="descriptionUpdate" name="descriptionUpdate" class="form-control input-sm" type="text" value="{{editType.description}}">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <input type="submit" class="form-control btn btn-info center-block" value="Update">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{else}}

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Type Register</h3>
    </div>
    <div class="panel-body">
        <form action="/type/new" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Name</label>
                    <input id="name" name="name" class="form-control" type="text">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Description</label>
                    <input id="description" name="description" class="form-control" type="text">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    <input type="submit" class="form-control btn btn-info center-block" value="Add">
                </div>
            </div>
        </div>
        </form>
    </div>
</div>
{{/if}}

{{/partial}}

{{> layout.hbs}}